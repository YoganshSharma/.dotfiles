cmds="\
ğŸ”’ lock		slock loginctl suspend
ğŸ˜´ sleep	slock systemctl hybrid-sleep
ğŸšª leave dwm	kill -TERM $(pgrep -u $USER "\bdwm$")
â™» renew dwm	kill -HUP $(pgrep -u $USER "\bdwm$")
ğŸ» hibernate	slock systemctl hibernate
ğŸ”ƒ reboot	systemctl reboot
ğŸ–¥ï¸ shutdown	systemctl poweroff
ğŸ“º display off 	 xset dpms force off"

choice="$(echo "$cmds" | cut -d'	' -f 1 | dmenu)" || exit 1

`echo "$cmds" | grep "^$choice	" | cut -d '	' -f2-`
